<c:MetroWindow xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:Synfonia.ViewModels;assembly=Synfonia" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:c="clr-namespace:Synfonia.Controls;assembly=Synfonia" xmlns:local="clr-namespace:Synfonia.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
x:Class="Synfonia.Views.MainWindow" Icon="/Assets/avalonia-logo.ico" Title="Synfonia">
  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>
  <c:MetroWindow.TitleBarContent>
    <DockPanel>
      <local:AudioControlPanel DockPanel.Dock="Left" DataContext="{Binding DiscChanger}" />
      <local:VolumeControlView DataContext="{Binding VolumeControl}" DockPanel.Dock="Right" />
      <local:TrackStatusView DataContext="{Binding TrackStatus}" />
    </DockPanel>
  </c:MetroWindow.TitleBarContent>
  <local:CollectionExplorerView DataContext="{Binding CollectionExplorer}" />
</c:MetroWindow>
