<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Synfonia.ViewModels;assembly=Synfonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:c="clr-namespace:Synfonia.Controls;assembly=Synfonia"
        xmlns:local="clr-namespace:Synfonia.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="Synfonia.Views.MainWindow" Icon="/Assets/avalonia-logo.ico" Title="Synfonia"
        SystemDecorations="BorderOnly">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <DockPanel LastChildFill="True" Background="LightGray">
    <Border DockPanel.Dock="Top" BorderThickness="0 0 0 1" BorderBrush="Gray">
      <DockPanel LastChildFill="True" Height="80" Margin="0 2 0 0">
        <local:AudioControlPanel DockPanel.Dock="Left" DataContext="{Binding DiscChanger}" />
        <local:VolumeControlView DockPanel.Dock="Right" />
        <local:TrackStatusView DataContext="{Binding TrackStatus}" />
      </DockPanel>
    </Border>
    <local:CollectionExplorerView DataContext="{Binding CollectionExplorer}" />
  </DockPanel>
</Window>