<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Symphony.Views.CollectionExplorerView">
  <ListBox Items="{Binding Albums}" SelectedItem="{Binding SelectedAlbum}">
    <ListBox.ItemsPanel>
      <ItemsPanelTemplate>
        <WrapPanel MaxWidth="1100" HorizontalAlignment="Center" />
      </ItemsPanelTemplate>
    </ListBox.ItemsPanel>
    <ListBox.ItemTemplate>
      <DataTemplate>
        <Image Margin="5" Width="200" Stretch="UniformToFill" Source="{Binding Cover}" />
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
