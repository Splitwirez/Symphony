<UserControl xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:c="clr-namespace:Synfonia.Controls;assembly=Synfonia" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="Synfonia.Views.VolumeControlView">
  <Panel>
    <Panel.Styles>
      <Style Selector="ToggleButton.volumetoggle /template/ ContentPresenter">
        <Setter Property="BorderThickness" Value="0"/>
      </Style>
      <Style Selector="ToggleButton.volumetoggle:checked DrawingPresenter#Icon">
        <Setter Property="Drawing" Value="{DynamicResource VolumeMute}"/>
      </Style>
      <Style Selector="ToggleButton.volumetoggle:unchecked DrawingPresenter#Icon">
        <Setter Property="Drawing" Value="{DynamicResource Volume}"/>
      </Style>
    </Panel.Styles>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <ToggleButton Classes="volumetoggle" IsChecked="{Binding IsMuted, Mode=OneWay}">
        <DrawingPresenter Name="Icon" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
      </ToggleButton>
      <Slider IsEnabled="{Binding !IsMuted}" Minimum="0" Width="100" Maximum="1" VerticalAlignment="Center" />
    </StackPanel>
  </Panel>
</UserControl>
