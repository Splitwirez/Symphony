<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Symphony.Views.AudioControlPanel">
  <Panel Height="80">
    <Image Opacity="0.25" Source="avares://Symphony/Assets/AudioControlsViewMock.png" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button HorizontalAlignment="Center" Width="54" Background="Transparent" Command="{Binding BackCommand}" />
      <Button HorizontalAlignment="Center" Width="54" Background="Transparent" Command="{Binding PlayCommand}" />
      <Button HorizontalAlignment="Center" Width="54" Background="Transparent" Command="{Binding ForwardCommand}" />
    </StackPanel>
  </Panel>
</UserControl>
